{
  "name": "edexa-sdk",
  "version": "0.0.1",
  "description": "Extended version of OpenAPI SDK for Edexa platform",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rm -rf ./build && tsc",
    "start": "node dist/index.js",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint src/**/*.ts --fix",
    "test": "mocha -r ts-node/register test/**/*.ts --timeout 100000 $1",
    "debug": "npm run build:pack && cd test && npm run install:lib:debug",
    "testrpc": "ganache-cli --mnemonic 'clock radar mass judge dismiss just intact mind resemble fringe diary casino' --gasLimit 13000000",
    "install:example": "cd examples && npm i ../maticnetwork-maticjs-3.5.0.tgz --no-save",
    "coverage": "nyc --reporter=html npm run test",
    "prepare": "husky install && npx husky add .husky/pre-commit \"npx validate-branch-name\" && npx husky add .husky/commit-msg \".git/hooks/commit-msg $1\" && npx husky add .husky/pre-commit \"npx lint-staged\""
  },
  "author": "edeXa",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "form-data": "^4.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "tslint": "^6.1.3",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
